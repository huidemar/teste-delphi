unit Entidade.Dependente;

interface

uses Entidade.Pessoa;

type
  TDependente = class(TPessoa)
  private
    FIsCalculaINSS: boolean;
    FIsCalculaIR: boolean;
    Funcionario_Cpf: String;
  public
    property IsCalculaIR: boolean read FIsCalculaIR write FIsCalculaIR;
    property IsCalculaINSS: boolean read FIsCalculaINSS write FIsCalculaINSS;
    constructor Create(pFuncionario_Cpf, pNome: String; pIsCalculaIR, pIsCalculaINSS: Boolean);
    destructor Destroy; override;
  end;

implementation

{ TDependente }

constructor TDependente.Create(pFuncionario_Cpf, pNome: String; pIsCalculaIR, pIsCalculaINSS: Boolean);
begin
  inherited Create;
  Funcionario_Cpf := pFuncionario_Cpf;
  Nome := pNome;
  FIsCalculaIR := pIsCalculaIR;
  FIsCalculaINSS := pIsCalculaINSS;
end;

destructor TDependente.Destroy;
begin

  inherited;
end;

end.
