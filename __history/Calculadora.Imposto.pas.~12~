unit Calculadora.Imposto;

interface

uses Calculadora.Calculadora, System.SysUtils;

type
  TImposto = class(TCalculadora)
  private
    FImpostoA: Double;
    FImpostoB: Double;
    FImpostoC: Double;
  public
    constructor Create;
    Destructor Destroy; override;
    function GetImpostoA: Double;
    function GetImpostoB: Double;
    function GetImpostoC: Double;
    function Operacao: Double; override;
  end;

implementation

{ TImposto }

constructor TImposto.Create;
begin
  FImpostoA := 0;
  FImpostoB := 0;
  FImpostoC := 0;
end;

destructor TImposto.Destroy;
begin

  inherited;
end;

function TImposto.GetImpostoA: Double;
begin
  Operacao;
end;

function TImposto.GetImpostoB: Double;
begin
  Result := FImpostoA - 15;
end;

function TImposto.GetImpostoC: Double;
begin
  Result := FImpostoA + GetImpostoB;
end;

function TImposto.Operacao: Double;
begin
  Result := ((GetNumero1 * (20 / 100)) - 500);
  FImpostoA := Result;
end;

end.
